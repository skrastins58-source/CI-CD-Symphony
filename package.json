{
  "name": "ci-cd-symphony",
  "version": "1.0.0",
  "description": "Fully automated CI/CD pipeline with delta analysis, status badges, documentation generation, Slack notifications, security scanning, and baseline updates.",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "build": "webpack --mode=production",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "prepare": "husky install",
    "ci:analysis": "node scripts/run-analysis.js",
    "ci:badges": "node scripts/generate-badges.js",
    "ci:comment": "node scripts/comment-pr.js",
    "ci:slack": "node scripts/slack-notify.js",
    "ci:baseline": "node scripts/update-baseline.js"
  },
  "keywords": [
    "ci",
    "cd",
    "lighthouse",
    "coverage",
    "bundle-size",
    "automation"
  ],
  "author": "Janis",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.0.0",
    "express": "^4.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@lhci/cli": "^0.12.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^10.0.1",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.0.0",
    "eslint": "^8.50.0",
    "html-webpack-plugin": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "semantic-release": "^22.0.0",
    "serve": "^14.0.0",
    "style-loader": "^3.0.0",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.0.0",
    "webpack-cli": "^5.1.4"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}